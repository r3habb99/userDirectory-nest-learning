# Database Configuration
DATABASE_URL="mysql://username:password@localhost:3306/college_directory"
DB_CONNECTION_LIMIT=10
DB_ACQUIRE_TIMEOUT=60000
DB_TIMEOUT=60000
DB_ENABLE_LOGGING=false

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_SECRET="your-refresh-secret-key"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
HOST="0.0.0.0"
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"
BASE_URL="http://localhost:3000"

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_MIME_TYPES="image/jpeg,image/png,image/webp,image/gif"
UPLOAD_PATH="./uploads"

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX=100
CORS_ORIGINS="http://localhost:3001,http://localhost:3000"

# Cache Configuration
CACHE_TTL=300  # 5 minutes in seconds
CACHE_MAX=100
REDIS_URL=""  # Optional: Redis URL for distributed caching

# Logging Configuration
LOG_LEVEL="info"
LOG_ENABLE_FILE=false
LOG_PATH="./logs"

# Email Configuration (for future notifications)
EMAIL_HOST=""
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=""
EMAIL_PASSWORD=""
EMAIL_FROM="noreply@college.edu"

# Application Features
ENABLE_SWAGGER=true
ENABLE_METRICS=false
ENABLE_AUDIT_LOG=true
MAX_STUDENTS_PER_COURSE=300

# Development/Testing
ENABLE_SEED_DATA=true
ENABLE_DEBUG_ROUTES=false

# Production Security (Only for production)
# HELMET_ENABLED=true
# RATE_LIMIT_STRICT=true
# DISABLE_SWAGGER=true
